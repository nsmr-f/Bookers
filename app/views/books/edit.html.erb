<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<h5>Title</h5>
 <%= f.text_field :title %>
<h5>Body:</h5>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
 
<% end %>

